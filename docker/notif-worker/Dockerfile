FROM node:21

WORKDIR /base

COPY ["package.json", "./package.json"]
COPY [".yarnrc", "./.yarnrc"]
COPY [".npmrc", "./.npmrc"]
COPY [".eslintrc.js", "./.eslintrc.js"]
COPY ["turbo.json", "./turbo.json"]
COPY ["yarn.lock", "./yarn.lock"]
COPY ["tsconfig.json", "./tsconfig.json"]

COPY ["packages/typescript-config", "./packages/typescript-config"]
COPY ["packages/eslint-config", "./packages/eslint-config"]
COPY ["backend/backend-common", "./backend/backend-common"]
COPY ["packages/common", "./packages/common"]
COPY ["packages/blockchain", "./packages/blockchain"]
COPY ["backend/zeus", "./backend/zeus"]
COPY ["backend/notif-worker", "./backend/notif-worker"]


RUN cd /base
RUN yarn install
RUN yarn run build

EXPOSE 8080

WORKDIR /base/backend/notif-worker

CMD ["yarn", "dev"]
