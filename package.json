{
  "name": "paybox",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --concurrency=11",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db": "docker compose -f ./backend/hasura/docker-compose.yml up",
    "hasura": "hasura console --project backend/hasura/hasura",
    "kafka": "docker compose -f ./docker/kafka/docker-compose.yml up"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./.husky/pre-commit",
      "post-commit": "./.husky/post-commit",
      "post-merge": "./.husky/post-merge"
    }
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.11",
  "workspaces": [
    "apps/*",
    "packages/*",
    "backend/*",
    "openapi"
  ],
  "dependencies": {
    "anchor": "^1.4.1",
    "esbuild": "^0.19.11",
    "husky": "^9.0.10",
    "openapi-typescript-codegen": "^0.27.0"
  }
}
